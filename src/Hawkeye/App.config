<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>		
	</configSections>
	<log4net>
		<appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
			<file value="c:\temp\hawkeye.log" />
			<!--<file type="log4net.Util.PatternString">
				<converter>
					<name value="folder" />
					<type value="Hawkeye.Logging.log4net.SpecialFolderPatternConverter, Mexos.Core" />
				</converter>
				<conversionPattern value="%folder{CommonApplicationData}\Hawkeye\Hawkeye.log" />
			</file>-->
			<appendToFile value="true" />
			<rollingStyle value="Date" />
			<datePattern value="yyyyMMdd" />
			<!-- one file per day -->
			<maxSizeRollBackups value="30" />
			<!-- We keep logs during 1 month -->
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %-8level - %message%newline" />
			</layout>
		</appender>
		<root>
			<!--<level value="INFO"/>-->
			<level value="VERBOSE"/>
			<appender-ref ref="RollingFileAppender" />
		</root>
	</log4net>
</configuration>